<!DOCTYPE html>
<html>
  <head>
    <title>Vehicles</title>
    <style>
      body {
        font-family: "Segoe UI", Arial, sans-serif;
        background: #f7f7f7;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        padding: 32px;
      }
      h1 {
        text-align: center;
        color: #333;
      }
      a.add-btn {
        text-decoration: none;
        display: block;
        background: #1976d2;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 15px;
        margin-bottom: 20px;
        float: right;
      }
      a.add-btn:hover {
        opacity: 0.85;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
      }
      th {
        background: #f1f1f1;
      }
      img {
        max-width: 80px;
        max-height: 60px;
        border-radius: 4px;
      }
      .actions button,
      .actions form {
        display: inline;
      }
      .actions .edit-btn {
        background: #388e3c;
        color: #fff;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        margin-right: 5px;
      }
      .actions .delete-btn {
        background: #e53935;
        color: #fff;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
      }
      .actions .edit-btn:hover,
      .actions .delete-btn:hover,
      .add-btn:hover {
        opacity: 0.85;
      }
    </style>
  </head>
  <body>
    <!-- Add this inside your <body> or .container -->
<div style="text-align:right;">
  <form action="/logout" method="get" style="display:inline;">
    <button type="submit" style="background:#e53935;color:#fff;border:none;padding:8px 16px;border-radius:5px;cursor:pointer;">Logout</button>
  </form>
</div>
    <div class="container">
      <h1>Vehicles</h1>
      <a href="/vehicles/add"  class="add-btn">Add Car</a>
      <table>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% vehicles.forEach(vehicle => { %>
          <tr>
            <td>
              <% if (vehicle.image) { %>
              <img src="<%= vehicle.image %>" alt="image" />
              <% } %>
            </td>
            <td><%= vehicle.vehicleName %></td>
            <td><%= vehicle.brand %></td>
            <td>$<%= vehicle.price %></td>
            <td><%= vehicle.desc %></td>
            <td class="actions">
              <a href="/vehicles/<%= vehicle.id %>/edit"
                ><button class="edit-btn">Edit</button></a
              >
              <form
                method="POST"
                action="/vehicles/<%= vehicle.id %>?_method=DELETE"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="delete-btn"
                  onclick="return confirm('Delete this vehicle?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
